{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "http://localhost/DE_CIM_Model/abb.eam.workorder.json#",
    "title": "Work Order Model",
    "model-metadata": {
        "model-version": "1.0.0",
        "model-name": "abb.eam.workorder.json"
    },
    "definitions": {
        "statustypes": {
            "$id": "#workOrderStatusTypes",
            "type": "string",
            "enum": [
                "Requested",
                "In Progress",
                "Complete"
            ]
        },
        "secondaryattributetypes": {
            "$id": "#workOrderSecondaryAttributeTypes",
            "type": "string",
            "$comment": "employeeId is the identity of a worker associated with this WO, otherwise the value is an arbitrary string or int",
            "enum": [
                "employeeId",
                "string",
                "int"
            ]
        },
        "secondaryattribute": {
            "$id": "#workOrderSecondaryAttribute",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "dataType": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "value"
            ]
        }
    },
    "$comment": "Below is the actual definition of Work Order",
    "properties": {
        "workOrderId": {
            "type": "string"
        },
        "workDescription": {
            "type": "string"
        },
        "startDate": {
            "type": "string"
        },
        "workOrderStatus": {
            "$ref": "#/definitions/statustypes"
        },
        "workCompleted": {
            "type": "boolean"
        },
        "secondaryAttributes": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/secondaryattribute"
            },
            "default": []
        },
        "parentAssetId": {
            "type": "string"
        },
        "assets": {
            "type": "array",
            "items": {
                "$ref": "abb.eam.asset.json"
            },
            "maxItems": 1,
            "default": []
        },
        "location": {
            "$ref": "abb.eam.location.json"
        }
    },
    "required": [
        "workOrderId",
        "workDescription",
        "startDate",
        "workOrderStatus",
        "secondaryAttributes"
    ]
}
