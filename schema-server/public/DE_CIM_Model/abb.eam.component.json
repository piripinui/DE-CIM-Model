{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://localhost/DE_CIM_Model/abb.eam.component.json",
  "title": "Component Model",
  "model-metadata": {
    "model-version": "1.0.0",
    "model-name": "abb.eam.component.json"
  },

  "$comment": "Below is the definition of component itself.",

  "type": "object",
  "properties": {
    "componentId": {
      "type": "string"
    },
    "componentDescription": {
      "type": "string"
    },
    "secondaryAttributes": {
      "type": "array",
      "items": { "$ref": "abb.eam.component.secondaryattribute.json" },
      "default": []
    },
    "parentAssetId": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "items": { "$ref": "abb.eam.asset.json" },
      "maxItems": 1,
      "default": []
    }
  },
  "required": [
    "componentId", "componentDescription", "secondaryAttributes"
  ]
}
