{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "http://localhost/DE_CIM_Model/abb.eam.asset.json",
    "type": "object",
    "title": "Asset Model",

    "model-metadata": {
        "model-version": "1.0.0",
        "model-name": "abb.eam.asset.json"
    },

    "definitions": {
        "statustypes": {
            "$id": "#assetStatusTypes",
            "type": "string",
            "enum": [
                "Installed",
                "Proposed",
                "Abandoned",
                "Active"
            ]
        },
        "secondaryattribute": {
            "$id": "#assetSecondaryAttribute",
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "dataType": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "value"
            ]
        }
    },

    "properties": {
        "assetId": {
            "type": "string"
        },
        "assetDescription": {
            "type": "string"
        },
        "assetStatus": {
            "$ref": "#/definitions/statustypes"
        },
        "assetCriticality": {
            "type": "string",
            "enum": [
                "High",
                "Medium",
                "Low"
            ]
        },
        "secondaryAttributes": {
            "type": "array",
            "default": [],
            "items": {
                "$ref": "#/definitions/secondaryattribute"
            }
        },
        "workOrders": {
            "type": "array",
            "default": [],
            "items": {
                "$ref": "abb.eam.workorder.json"
            }
        },
        "location": {
            "$ref": "abb.eam.location.json"
        },
        "parentAssetId": {
            "type": "string"
        },
        "subassets": {
            "type": "array",
            "default": [],
            "items": {
                "$ref": "abb.eam.asset.json"
            }
        },
        "subcomponents": {
            "type": "array",
            "default": [],
            "items": {
                "$ref": "abb.eam.component.json"
            }
        },
        "features": {
            "type": "array",
            "default": [],
            "items": {
                "$ref": "abb.eam.feature.json"
            }
        }
    },
    "required": [
        "assetId",
        "assetDescription",
        "assetStatus",
        "secondaryAttributes"
    ]
}
