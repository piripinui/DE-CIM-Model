{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://localhost/DE_CIM_Model/abb.eam.feature.json#",
  "title": "Feature Model",
  "model-metadata": {
    "model-version": "1.0.0",
    "model-name": "abb.eam.feature.json"
  },

  "$comment": "This is a definition of a generic feature that can be used for anything",

  "definitions": {
    "featureSecondaryAttribute": {
        "$id": "#featureSecondaryAttribute",
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "value": {
              "type": "string"
            },
            "category": {
              "type": "string"
            },
            "dataType": {
              "type": "string"
            }
          },
          "required": [
            "name",
            "value"
          ]
    }
  },

  "$comment": "Below is the definition of the feature itself.",

  "type": "object",
  "properties": {
    "featureId": {
      "type": "string"
    },
    "featureDescription": {
      "type": "string"
    },
    "secondaryAttributes": {
      "type": "array",
      "items": { "$ref": "#featureSecondaryAttribute" },
      "default": []
    },
    "parentAssetId": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "items": { "$ref": "abb.eam.asset.json" },
      "maxItems": 1,
      "default": []
    }
  },
  "required": [
    "featureId", "featureDescription", "secondaryAttributes"
  ]
}
