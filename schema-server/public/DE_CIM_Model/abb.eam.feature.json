{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "abb.eam.feature.json",
  "title": "Feature Model",
  "model-metadata": {
    "model-version": "1.0.0",
    "model-name": "abb.eam.feature.json"
  },

  "type": "object",
  "properties": {
    "featureId": {
      "type": "string"
    },
    "featureDescription": {
      "type": "string"
    },
    "secondaryAttributes": {
      "type": "array",
      "items": { "$ref": "abb.eam.feature.secondaryattribute.json" },
      "default": []
    },
    "parentAssetId": {
      "type": "string"
    },
    "assets": {
      "type": "array",
      "items": { "$ref": "abb.eam.asset.json" },
      "maxItems": 1,
      "default": []
    }
  },
  "required": [
    "featureId", "featureDescription", "secondaryAttributes"
  ]
}
